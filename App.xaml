<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:utils="clr-namespace:ResearchApp.Utils"
             xmlns:local="clr-namespace:ResearchApp"
             x:Class="ResearchApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <utils:InverseBoolConverter x:Key="InverseBoolConverter" />
            <utils:BoolToTextConverter  x:Key="BoolToTextConverter" />
            
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
